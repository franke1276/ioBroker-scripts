function decrementDays(){
    const days = States.getStateByName("NichtBeregnenFuer");
    log("nicht beregnen f√ºr  " + days + " Tage");
    let newDays = days - 1;
    if (newDays < 0) {
        newDays = 0;
    }
    log("neuer state NichtBeregnenFuer: " + newDays);
    States.setStateByName("NichtBeregnenFuer", newDays);  
}

schedule("0 6 * * *", function () {
    decrementDays();
});

